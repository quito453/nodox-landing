    <script>
        // Elementos DOM
        const precioInicialInput = document.getElementById('precio-inicial');
        const porcentajeImpuestoInput = document.getElementById('porcentaje-impuesto');
        const porcentajeGananciaInput = document.getElementById('porcentaje-ganancia');
        const btnCalcular = document.getElementById('btn-calcular');
        
        // Elementos de visualización
        const mostrarPrecioInicial = document.getElementById('mostrar-precio-inicial');
        const montoGananciaDisplay = document.getElementById('monto-ganancia');
        const subtotalSinImpuestoDisplay = document.getElementById('subtotal-sin-impuesto');
        const montoImpuestoDisplay = document.getElementById('monto-impuesto');
        const precioFinalDisplay = document.getElementById('precio-final');
        
        // Tarjetas de ejemplo
        const tarjetasEjemplo = document.querySelectorAll('.tarjeta-ejemplo');
        
        // Función para formatear moneda
        function formatearMoneda(monto) {
            return 'Q ' + parseFloat(monto).toFixed(2);
        }
        
        // Función para calcular el método anterior (para comparación)
        function calcularMetodoAnterior(precioInicial, porcentajeImpuesto, porcentajeGanancia) {
            // Impuesto primero
            const montoImpuestoAnterior = precioInicial * (porcentajeImpuesto / 100);
            const precioDespuesImpuesto = precioInicial + montoImpuestoAnterior;
            
            // Ganancia después
            const montoGananciaAnterior = precioDespuesImpuesto * (porcentajeGanancia / 100);
            const precioFinalAnterior = precioDespuesImpuesto + montoGananciaAnterior;
            
            return {
                montoImpuesto: montoImpuestoAnterior,
                montoGanancia: montoGananciaAnterior,
                precioFinal: precioFinalAnterior
            };
        }
        
        // Función para calcular precios (NUEVO MÉTODO)
        function calcularPrecios() {
            // Obtener valores de entrada
            const precioInicial = parseFloat(precioInicialInput.value) || 0;
            const porcentajeImpuesto = parseFloat(porcentajeImpuestoInput.value) || 0;
            const porcentajeGanancia = parseFloat(porcentajeGananciaInput.value) || 0;
            
            // NUEVO MÉTODO: Ganancia primero
            // 1. Calcular ganancia sobre precio inicial
            const montoGanancia = precioInicial * (porcentajeGanancia / 100);
            
            // 2. Calcular subtotal (sin impuesto)
            const subtotalSinImpuesto = precioInicial + montoGanancia;
            
            // 3. Calcular impuesto sobre el subtotal
            const montoImpuesto = subtotalSinImpuesto * (porcentajeImpuesto / 100);
            
            // 4. Calcular precio final
            const precioFinal = subtotalSinImpuesto + montoImpuesto;
            
            // Calcular también con el método anterior para comparación
            const resultadoAnterior = calcularMetodoAnterior(precioInicial, porcentajeImpuesto, porcentajeGanancia);
            
            // Actualizar visualización
            mostrarPrecioInicial.textContent = formatearMoneda(precioInicial);
            montoGananciaDisplay.textContent = formatearMoneda(montoGanancia);
            subtotalSinImpuestoDisplay.textContent = formatearMoneda(subtotalSinImpuesto);
            montoImpuestoDisplay.textContent = formatearMoneda(montoImpuesto);
            precioFinalDisplay.textContent = formatearMoneda(precioFinal);
            
            // Actualizar porcentajes en la pantalla
            montoGananciaDisplay.innerHTML = formatearMoneda(montoGanancia) + ` <small>(${porcentajeGanancia}% sobre Q${precioInicial})</small>`;
            montoImpuestoDisplay.innerHTML = formatearMoneda(montoImpuesto) + ` <small>(${porcentajeImpuesto}% sobre Q${subtotalSinImpuesto.toFixed(2)})</small>`;
            
            // Actualizar resumen
            actualizarResumen(precioInicial, montoGanancia, subtotalSinImpuesto, montoImpuesto, precioFinal, porcentajeGanancia, porcentajeImpuesto);
            
            // Actualizar comparación
            actualizarComparacion(precioInicial, resultadoAnterior, montoGanancia, montoImpuesto, precioFinal, porcentajeGanancia, porcentajeImpuesto);
        }
        
        // Función para actualizar resumen
        function actualizarResumen(precioInicial, montoGanancia, subtotalSinImpuesto, montoImpuesto, precioFinal, porcentajeGanancia, porcentajeImpuesto) {
            const cajaInformacion = document.querySelector('.caja-informacion');
            cajaInformacion.innerHTML = `
                <h3><i class="fas fa-info-circle"></i> Resumen del Cálculo</h3>
                <p>Para un artículo con precio inicial de <strong>${formatearMoneda(precioInicial)}</strong>:</p>
                <ul style="margin-left: 20px; margin-top: 10px;">
                    <li>Primero agregamos <strong>${formatearMoneda(montoGanancia)}</strong> por ganancia (${porcentajeGanancia}% sobre Q${precioInicial})</li>
                    <li>Subtotal sin impuesto: <strong>${formatearMoneda(subtotalSinImpuesto)}</strong></li>
                    <li>Luego agregamos <strong>${formatearMoneda(montoImpuesto)}</strong> por impuesto (${porcentajeImpuesto}% sobre Q${subtotalSinImpuesto.toFixed(2)})</li>
                    <li>El precio final de venta es: <strong>${formatearMoneda(precioFinal)}</strong></li>
                </ul>
            `;
        }
        
        // Función para actualizar comparación
        function actualizarComparacion(precioInicial, resultadoAnterior, montoGanancia, montoImpuesto, precioFinal, porcentajeGanancia, porcentajeImpuesto) {
            const comparacionNuevo = document.querySelector('.comparacion-container .comparacion:nth-child(2)');
            const comparacionAnterior = document.querySelector('.comparacion-container .comparacion:nth-child(1)');
            
            comparacionAnterior.innerHTML = `
                <h4><i class="fas fa-calculator"></i> Método Anterior</h4>
                <p>Impuesto primero, luego ganancia:</p>
                <p>Impuesto: ${formatearMoneda(resultadoAnterior.montoImpuesto)} (${porcentajeImpuesto}% sobre Q${precioInicial})</p>
                <p>Subtotal: ${formatearMoneda(precioInicial + resultadoAnterior.montoImpuesto)}</p>
                <p>Ganancia: ${formatearMoneda(resultadoAnterior.montoGanancia)} (${porcentajeGanancia}% sobre ${formatearMoneda(precioInicial + resultadoAnterior.montoImpuesto)})</p>
                <p><strong>Total: ${formatearMoneda(resultadoAnterior.precioFinal)}</strong></p>
            `;
            
            comparacionNuevo.innerHTML = `
                <h4><i class="fas fa-calculator"></i> Método Nuevo</h4>
                <p>Ganancia primero, luego impuesto:</p>
                <p>Ganancia: ${formatearMoneda(montoGanancia)} (${porcentajeGanancia}% sobre Q${precioInicial})</p>
                <p>Subtotal: ${formatearMoneda(precioInicial + montoGanancia)}</p>
                <p>Impuesto: ${formatearMoneda(montoImpuesto)} (${porcentajeImpuesto}% sobre ${formatearMoneda(precioInicial + montoGanancia)})</p>
                <p><strong>Total: ${formatearMoneda(precioFinal)}</strong></p>
            `;
        }
        
        // Función para cargar ejemplo
        function cargarEjemplo(precio) {
            precioInicialInput.value = precio;
            calcularPrecios();
            
            // Dar retroalimentación visual
            tarjetasEjemplo.forEach(tarjeta => tarjeta.style.opacity = '0.7');
            event.currentTarget.style.opacity = '1';
            event.currentTarget.style.boxShadow = '0 5px 15px rgba(52, 152, 219, 0.3)';
            
            // Restablecer después de 1 segundo
            setTimeout(() => {
                tarjetasEjemplo.forEach(tarjeta => {
                    tarjeta.style.opacity = '1';
                    tarjeta.style.boxShadow = '';
                });
            }, 1000);
        }
        
        // Event Listeners
        btnCalcular.addEventListener('click', calcularPrecios);
        
        // Calcular al cambiar entrada
        precioInicialInput.addEventListener('input', calcularPrecios);
        porcentajeImpuestoInput.addEventListener('input', calcularPrecios);
        porcentajeGananciaInput.addEventListener('input', calcularPrecios);
        
        // Agregar event listeners a tarjetas de ejemplo
        tarjetasEjemplo.forEach(tarjeta => {
            tarjeta.addEventListener('click', function() {
                const precio = this.getAttribute('data-precio');
                cargarEjemplo(precio);
            });
        });
        
        // Inicializar calculadora al cargar la página
        document.addEventListener('DOMContentLoaded', calcularPrecios);
        
        // Agregar funcionalidad para tecla Enter
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calcularPrecios();
            }
        });
    </script>
</body>
</html>
